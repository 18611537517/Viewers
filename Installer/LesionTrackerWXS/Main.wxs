    <Directory Id='TARGETDIR' Name='SourceDir'>
      <Directory Id='ProgramFilesFolder'>
        <Directory Id='OHIF_Folder' Name='OHIF'>
          <Directory Id='INSTALLDIR' Name='LesionTracker' />
        </Directory>
      </Directory>
    </Directory>
	
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />

    <UIRef Id="WixUI" />

  </Product>
</Wix>